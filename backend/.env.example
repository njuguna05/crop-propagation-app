# Database Configuration
# Development (SQLite):
# DATABASE_URL=sqlite+aiosqlite:///./crop_propagation.db
# Production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://flora:password@localhost:5432/flora_db
DATABASE_URL=sqlite+aiosqlite:///./crop_propagation.db
DATABASE_ECHO=false

# JWT Configuration - CHANGE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment: development | production
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Crop Propagation API
VERSION=1.0.0

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=uploads
